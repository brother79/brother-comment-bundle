{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Comment list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Recordmodel</th>
                <th>Recordid</th>
                <th>Authorname</th>
                <th>Authoremail</th>
                <th>Authorwebsite</th>
                <th>Body</th>
                <th>Editionreason</th>
                <th>Status</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Link</th>
                <th>Issubscribe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('comment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.recordModel }}</td>
                <td>{{ entity.recordId }}</td>
                <td>{{ entity.authorName }}</td>
                <td>{{ entity.authorEmail }}</td>
                <td>{{ entity.authorWebsite }}</td>
                <td>{{ entity.body }}</td>
                <td>{{ entity.editionReason }}</td>
                <td>{{ entity.status }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.link }}</td>
                <td>{{ entity.isSubscribe }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('comment_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('comment_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('comment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
