{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Comment</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Recordmodel</th>
                <td>{{ entity.recordModel }}</td>
            </tr>
            <tr>
                <th>Recordid</th>
                <td>{{ entity.recordId }}</td>
            </tr>
            <tr>
                <th>Authorname</th>
                <td>{{ entity.authorName }}</td>
            </tr>
            <tr>
                <th>Authoremail</th>
                <td>{{ entity.authorEmail }}</td>
            </tr>
            <tr>
                <th>Authorwebsite</th>
                <td>{{ entity.authorWebsite }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ entity.body }}</td>
            </tr>
            <tr>
                <th>Editionreason</th>
                <td>{{ entity.editionReason }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Link</th>
                <td>{{ entity.link }}</td>
            </tr>
            <tr>
                <th>Issubscribe</th>
                <td>{{ entity.isSubscribe }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('comment') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('comment_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
